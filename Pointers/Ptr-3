#include<iostream>
using namespace std;

int main()
{
    int arr[10] = {23,122,41,67};
    cout<<"The address of first memory block is: "<<arr<<endl;
    cout<<arr[0]<<endl;
    cout<<"The address of first memory block is: "<<&arr[0]<<endl;
    cout<<"4th "<<*arr<<endl;
    cout<<"5th "<<*arr+1<<endl;
    cout<<"6th "<<*(arr+1)<<endl;
    cout<<"7th "<<*(arr)+1<<endl;
    cout<<"8th "<<*(arr+1)<<endl;
    int i=3;
    cout<<i[arr]<<endl;
    
    int temp[10] = {1,2};
    cout<<sizeof(temp)<<endl;
    cout<<"Size of 1st: "<<sizeof(*temp)<<endl;
    cout<<"Size of 2nd: "<<sizeof(&temp)<<endl;
    int *ptr1 = &temp[0];
    cout<<sizeof(ptr1)<<endl;
    cout<<sizeof(*ptr1)<<endl;
    cout<<sizeof(&ptr1)<<endl;
}
